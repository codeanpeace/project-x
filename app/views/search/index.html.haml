%div
  - if not flash.empty?
    - flash.each do |key, value|
      %div.row.alert.mar-bot-none{:class => "alert-#{key}"}= value

  %div.row

    %div#hero-unit
      %div#hero-unit-text.animated.fadeInRight

        %i.icon-shield.animated.bounceIn.white
        %h4.white Welcome!
        %p CoreQuest is an EdTech web app that facilitates the planning and teaching process of a Common Core based curriculum. CoreQuest enables teachers to search for and distribute Common Core specific online learning materials by enabling instructors to create "bundles" of resources which can then be shared with and utilized by their students.
        %div#ui-widget
          %label.mar-bot-10{:for => "tags"} Search by Standard:
          %input{:id => "tags", :type => "search", :results => 5}

  #action

    / %div#switch
    /   %div.switch.styleswitch
    /     %input{:id => "z", :name => "switch-z", :type => "radio", :checked => true}
    /     %label{:for => "z", :onclick => ""}Teacher

    /     %input{:id => "z1", :name => "switch-z", :type => "radio"}
    /     %label{:for => "z1", :onclick => ""}Student

    /     %span

    %div.row
      #subject
        - @subject_list.each do |subject|
          = form_tag search_grade_path, :remote => true do
            = hidden_field_tag :subject, subject
            = submit_tag subject, :class => "sun-flower-button"

    #grade

    #topic


/ %script
/   $(document).foundation();


- content_for :extra_javascript do
  :javascript
    $(document).ready(function() {

      var availableTags =  ['#{@availableTags.map(&:to_s).join("', '")}'];
      $( "#tags" ).autocomplete({
        source: availableTags,
        minLength: 3
      });
    });






